#include <cstdlib>											//all three needed for usage of srand
#include <iostream>
#include <fstream>											//usage of extern files
#include <ctime>

#include "locale.h" 										//for setlocale
#include "CGraph.h"
#include "CList.h"

using namespace std;

int main()
{
	ofstream testList,testGraph;
	setlocale(LC_ALL, "polish");
	srand(time(0));

	CList obj1;
	CGraph objMain(obj1);

	testList.open("test.txt");
	slistelem* temp = obj1.first();

	while (temp != 0)
	{ 															// detect end of slist
		testList << temp -> data << " -> ";
		temp = temp -> next;
	}
	testList << "\n###" << endl;
	testList.close();

	int i=0;
	testGraph<<"  |";
		while(i<objMain.size){
			testGraph<<i<<"|";
			i++;
		}
		testGraph<<endl;
		for(i=0;i<objMain.size;++i){
			if(i<10)testGraph<<i<<" |";
			else testGraph<<i<<"|";
			for(int j=0;j<objMain.size;++j){
				if(j>10)cout<<" ";
				testGraph<<objMain.costGraph[i][j]<<" ";
			}
			testGraph<<endl;
		}

	return 0;
}
